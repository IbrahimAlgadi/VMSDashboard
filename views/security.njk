{% extends "layout.njk" %}

{% block title %}Security Monitoring - CCTV Dashboard{% endblock %}

{% block extra_css %}
<link rel="stylesheet" href="/css/pages/security.css">
{% endblock %}

{% block content %}
<div class="container-fluid p-4">
  
  <!-- Page Header -->
  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <h1><i class="bi bi-lock me-2"></i>Security Monitoring</h1>
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb mb-0">
          <li class="breadcrumb-item"><a href="/">Home</a></li>
          <li class="breadcrumb-item active">Security Monitoring</li>
        </ol>
      </nav>
    </div>
    <button class="btn btn-primary" id="refreshBtn">
      <i class="bi bi-arrow-clockwise"></i> Refresh
    </button>
  </div>

  <!-- Security Overview Cards -->
  <div class="row g-3 mb-4">
    <div class="col-md-3">
      <div class="card text-center">
        <div class="card-body">
          <h6 class="text-muted mb-2">Security Score</h6>
          <h1 class="display-4 mb-0" id="securityScore">0</h1>
          <small class="text-muted" id="threatLevel">-</small>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card">
        <div class="card-body">
          <h6 class="text-muted mb-2">Total Checks</h6>
          <h2 id="totalChecks">0</h2>
          <small class="text-muted">Security validations</small>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card">
        <div class="card-body">
          <h6 class="text-muted mb-2">Passed</h6>
          <h2 class="text-success" id="passedChecks">0</h2>
          <small class="text-muted">Secure configurations</small>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card">
        <div class="card-body">
          <h6 class="text-muted mb-2">Failed</h6>
          <h2 class="text-danger" id="failedChecks">0</h2>
          <small class="text-muted">Require attention</small>
        </div>
      </div>
    </div>
  </div>

  <div class="row g-3 mb-4">
    
    <!-- Camera Security Checks -->
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h5 class="mb-0"><i class="bi bi-camera"></i> Camera Security Checks</h5>
        </div>
        <div class="card-body p-0">
          <div class="list-group list-group-flush" id="cameraSecurityList">
            <!-- Populated by JavaScript -->
          </div>
        </div>
      </div>
    </div>

    <!-- NVR Security Checks -->
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h5 class="mb-0"><i class="bi bi-hdd"></i> NVR Security Checks</h5>
        </div>
        <div class="card-body p-0">
          <div class="list-group list-group-flush" id="nvrSecurityList">
            <!-- Populated by JavaScript -->
          </div>
        </div>
      </div>
    </div>

  </div>

  <!-- Recent Security Events -->
  <div class="row g-3">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <h5 class="mb-0"><i class="bi bi-exclamation-triangle"></i> Recent Security Events</h5>
        </div>
        <div class="card-body p-0">
          <div class="table-responsive">
            <table class="table table-hover mb-0">
              <thead>
                <tr>
                  <th>Severity</th>
                  <th>Device</th>
                  <th>Type</th>
                  <th>Message</th>
                  <th>Time</th>
                  <th>Status</th>
                </tr>
              </thead>
              <tbody id="securityEventsTable">
                <!-- Populated by JavaScript -->
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>
{% endblock %}

{% block extra_js %}
<script>
  // Pass server-rendered data to JavaScript
  window.securityDataFromServer = {{ data | stringify | safe }};
</script>
<script src="/js/pages/security.js"></script>
{% endblock %}
