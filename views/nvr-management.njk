{% extends "layout.njk" %}

{% block extra_css %}
<link rel="stylesheet" href="/css/pages/nvr.css">
{% endblock %}

{% block content %}
<div class="container-fluid p-4">
  
  <!-- Page Header -->
  <div class="row mb-4">
    <div class="col-md-8">
      <h1><i class="bi bi-hdd-rack me-2"></i>NVR Management</h1>
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
          <li class="breadcrumb-item active" aria-current="page">NVR Management</li>
        </ol>
      </nav>
    </div>
    <div class="col-md-4 text-md-end">
      <button class="btn btn-primary" id="add-nvr-btn">
        <i class="bi bi-plus-circle me-1"></i> Add NVR
      </button>
    </div>
  </div>

  <!-- Statistics Bar -->
  <div class="row mb-4">
    <div class="col-md-3 col-sm-6 mb-3 mb-md-0">
      <div class="stat-badge primary">
        <div class="stat-badge-icon">
          <i class="bi bi-hdd-rack"></i>
        </div>
        <div class="stat-badge-content">
          <div class="stat-badge-label">Total NVRs</div>
          <div class="stat-badge-value" id="total-nvrs-count">0</div>
        </div>
      </div>
    </div>
    <div class="col-md-3 col-sm-6 mb-3 mb-md-0">
      <div class="stat-badge success">
        <div class="stat-badge-icon">
          <i class="bi bi-check-circle"></i>
        </div>
        <div class="stat-badge-content">
          <div class="stat-badge-label">Online</div>
          <div class="stat-badge-value" id="online-nvrs-count">0</div>
        </div>
      </div>
    </div>
    <div class="col-md-3 col-sm-6 mb-3 mb-md-0">
      <div class="stat-badge danger">
        <div class="stat-badge-icon">
          <i class="bi bi-x-circle"></i>
        </div>
        <div class="stat-badge-content">
          <div class="stat-badge-label">Offline</div>
          <div class="stat-badge-value" id="offline-nvrs-count">0</div>
        </div>
      </div>
    </div>
    <div class="col-md-3 col-sm-6">
      <div class="stat-badge warning">
        <div class="stat-badge-icon">
          <i class="bi bi-exclamation-triangle"></i>
        </div>
        <div class="stat-badge-content">
          <div class="stat-badge-label">Warning</div>
          <div class="stat-badge-value" id="warning-nvrs-count">0</div>
        </div>
      </div>
    </div>
  </div>

  <!-- Filters Card -->
  <div class="card mb-4">
    <div class="card-header bg-white">
      <div class="d-flex justify-content-between align-items-center">
        <h6 class="mb-0"><i class="bi bi-funnel me-2"></i>Filters</h6>
        <button class="btn btn-sm btn-outline-secondary" id="reset-filters">
          <i class="bi bi-arrow-clockwise me-1"></i> Reset
        </button>
      </div>
    </div>
    <div class="card-body">
      <form id="nvr-filters" class="row g-3">
        <!-- Search -->
        <div class="col-md-4">
          <label for="search-nvr" class="form-label">Search</label>
          <input type="text" class="form-control" id="search-nvr" placeholder="Search by name, location, or IP...">
        </div>

        <!-- Status Filter -->
        <div class="col-md-2">
          <label for="filter-status" class="form-label">Status</label>
          <select class="form-select" id="filter-status">
            <option value="">All Status</option>
            <option value="online">Online</option>
            <option value="offline">Offline</option>
            <option value="warning">Warning</option>
          </select>
        </div>

        <!-- Region Filter -->
        <div class="col-md-2">
          <label for="filter-region" class="form-label">Region</label>
          <select class="form-select" id="filter-region">
            <option value="">All Regions</option>
            <option value="Riyadh">Riyadh</option>
            <option value="Jeddah">Jeddah</option>
            <option value="Dammam">Dammam</option>
            <option value="Mecca">Mecca</option>
            <option value="Medina">Medina</option>
          </select>
        </div>

        <!-- Branch Filter -->
        <div class="col-md-2">
          <label for="filter-branch" class="form-label">Branch</label>
          <select class="form-select" id="filter-branch">
            <option value="">All Branches</option>
          </select>
        </div>

        <!-- Apply Button -->
        <div class="col-md-2 d-flex align-items-end">
          <button type="submit" class="btn btn-primary w-100">
            <i class="bi bi-search me-1"></i> Apply
          </button>
        </div>
      </form>
    </div>
  </div>

  <!-- NVR List Card -->
  <div class="card">
    <div class="card-header bg-white">
      <div class="d-flex justify-content-between align-items-center">
        <h6 class="mb-0"><i class="bi bi-list-ul me-2"></i>NVR List</h6>
        <div class="btn-group btn-group-sm" role="group">
          <button type="button" class="btn btn-outline-secondary" id="refresh-list">
            <i class="bi bi-arrow-clockwise"></i>
          </button>
          <button type="button" class="btn btn-outline-secondary" id="export-csv">
            <i class="bi bi-file-earmark-spreadsheet"></i> CSV
          </button>
        </div>
      </div>
    </div>
    <div class="card-body">
      <!-- Loading State -->
      <div id="loading-state" class="text-center py-5">
        <div class="spinner-border text-primary" role="status">
          <span class="visually-hidden">Loading...</span>
        </div>
        <p class="mt-3 text-muted">Loading NVR data...</p>
      </div>

      <!-- NVR Table -->
      <div id="nvr-table-container" style="display: none;">
        <div class="table-responsive">
          <table class="table table-hover align-middle" id="nvr-table">
            <thead class="table-light">
              <tr>
                <th>Name</th>
                <th>Location</th>
                <th>Status</th>
                <th>Cameras</th>
                <th>Uptime</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody id="nvr-table-body">
              <!-- Populated by JavaScript -->
            </tbody>
          </table>
        </div>
      </div>

      <!-- Empty State -->
      <div id="empty-state" class="text-center py-5" style="display: none;">
        <i class="bi bi-inbox fs-1 text-muted"></i>
        <p class="mt-3 text-muted">No NVRs found matching your criteria</p>
        <button class="btn btn-sm btn-outline-primary" id="clear-filters-empty">
          Clear Filters
        </button>
      </div>
    </div>
  </div>

</div>

<!-- Include NVR Detail Modal -->
{% include "partials/modals/nvr-detail.njk" %}

{% endblock %}

{% block extra_js %}
<script src="/js/pages/nvr-management.js"></script>
{% endblock %}

