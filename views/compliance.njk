{% extends "layout.njk" %}

{% block title %}Compliance Dashboard - CCTV Dashboard{% endblock %}

{% block extra_css %}
<link rel="stylesheet" href="/css/pages/compliance.css">
{% endblock %}

{% block content %}
<div class="container-fluid p-4">
  
  <!-- Page Header -->
  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <h1><i class="bi bi-shield-check me-2"></i>Compliance Dashboard</h1>
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb mb-0">
          <li class="breadcrumb-item"><a href="/">Home</a></li>
          <li class="breadcrumb-item active">Compliance</li>
        </ol>
      </nav>
    </div>
    <button class="btn btn-primary" id="refreshBtn">
      <i class="bi bi-arrow-clockwise"></i> Refresh
    </button>
  </div>

  <!-- Overall Compliance Card -->
  <div class="row g-3 mb-4">
    <div class="col-md-3">
      <div class="card text-center">
        <div class="card-body">
          <h6 class="text-muted mb-2">Overall Compliance</h6>
          <h1 class="display-4 mb-0" id="overallCompliance">0%</h1>
          <div class="progress mt-3" style="height: 8px;">
            <div class="progress-bar" id="overallProgress" role="progressbar" style="width: 0%"></div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card">
        <div class="card-body">
          <h6 class="text-muted mb-2">Total Checks</h6>
          <h2 id="totalChecks">0</h2>
          <small class="text-muted">Across all systems</small>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card">
        <div class="card-body">
          <h6 class="text-muted mb-2">Passed</h6>
          <h2 class="text-success" id="passedChecks">0</h2>
          <small class="text-muted">Requirements met</small>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card">
        <div class="card-body">
          <h6 class="text-muted mb-2">Failed</h6>
          <h2 class="text-danger" id="failedChecks">0</h2>
          <small class="text-muted">Need attention</small>
        </div>
      </div>
    </div>
  </div>

  <div class="row g-3">
    
    <!-- Requirements Checklist -->
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h5 class="mb-0"><i class="bi bi-list-check"></i> Requirements Checklist</h5>
        </div>
        <div class="card-body p-0">
          <div class="list-group list-group-flush" id="requirementsList">
            <!-- Populated by JavaScript -->
          </div>
        </div>
      </div>
    </div>

    <!-- Compliance by Region -->
    <div class="col-md-4">
      <div class="card">
        <div class="card-header">
          <h5 class="mb-0"><i class="bi bi-geo-alt"></i> Compliance by Region</h5>
        </div>
        <div class="card-body p-0">
          <div class="list-group list-group-flush" id="regionalCompliance">
            <!-- Populated by JavaScript -->
          </div>
        </div>
      </div>
    </div>

  </div>

</div>
{% endblock %}

{% block extra_js %}
<script>
  // Pass server-rendered data to JavaScript
  window.complianceDataFromServer = {{ data | stringify | safe }};
</script>
<script src="/js/pages/compliance.js"></script>
{% endblock %}
