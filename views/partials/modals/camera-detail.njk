<!-- Camera Detail Modal -->
<div class="modal fade" id="cameraDetailModal" tabindex="-1" aria-labelledby="cameraDetailModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-xl modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="cameraDetailModalLabel">Camera Details</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <!-- Nav Tabs -->
        <ul class="nav nav-tabs mb-3" id="cameraDetailTabs" role="tablist">
          <li class="nav-item" role="presentation">
            <button class="nav-link active" id="info-tab" data-bs-toggle="tab" data-bs-target="#info-pane" type="button" role="tab">
              <i class="bi bi-info-circle"></i> Information
            </button>
          </li>
          <li class="nav-item" role="presentation">
            <button class="nav-link" id="diagnostics-tab" data-bs-toggle="tab" data-bs-target="#diagnostics-pane" type="button" role="tab">
              <i class="bi bi-hdd"></i> Edge Storage Details
            </button>
          </li>
        </ul>

        <!-- Tab Content -->
        <div class="tab-content" id="cameraDetailTabsContent">
          <!-- Information Tab -->
          <div class="tab-pane fade show active" id="info-pane" role="tabpanel">
            <div class="row g-3">
              <div class="col-md-6">
                <div class="info-group">
                  <label class="info-label">Camera Name</label>
                  <div class="info-value" id="modalCameraName">-</div>
                </div>
              </div>
              <div class="col-md-6">
                <div class="info-group">
                  <label class="info-label">Status</label>
                  <div class="info-value">
                    <span class="badge" id="modalCameraStatus">-</span>
                  </div>
                </div>
              </div>
              <div class="col-md-6">
                <div class="info-group">
                  <label class="info-label">Location</label>
                  <div class="info-value" id="modalCameraLocation">-</div>
                </div>
              </div>
              <div class="col-md-6">
                <div class="info-group">
                  <label class="info-label">Position</label>
                  <div class="info-value" id="modalCameraPosition">-</div>
                </div>
              </div>
              <div class="col-md-6">
                <div class="info-group">
                  <label class="info-label">NVR</label>
                  <div class="info-value" id="modalCameraNVR">-</div>
                </div>
              </div>
              <div class="col-md-6">
                <div class="info-group">
                  <label class="info-label">IP Address</label>
                  <div class="info-value" id="modalCameraIP">-</div>
                </div>
              </div>
              <div class="col-md-6">
                <div class="info-group">
                  <label class="info-label">Model</label>
                  <div class="info-value" id="modalCameraModel">-</div>
                </div>
              </div>
              <div class="col-md-6">
                <div class="info-group">
                  <label class="info-label">Resolution</label>
                  <div class="info-value" id="modalCameraResolution">-</div>
                </div>
              </div>
              <div class="col-md-6">
                <div class="info-group">
                  <label class="info-label">Frame Rate</label>
                  <div class="info-value"><span id="modalCameraFPS">-</span> FPS</div>
                </div>
              </div>
              <div class="col-md-6">
                <div class="info-group">
                  <label class="info-label">Bitrate</label>
                  <div class="info-value"><span id="modalCameraBitrate">-</span> kbps</div>
                </div>
              </div>
              <div class="col-md-6">
                <div class="info-group">
                  <label class="info-label">Uptime</label>
                  <div class="info-value"><span id="modalCameraUptime">-</span>%</div>
                </div>
              </div>
            </div>
          </div>

          <!-- Edge Storage Details Tab -->
          <div class="tab-pane fade" id="diagnostics-pane" role="tabpanel">
            <div class="row g-3 justify-content-center">
              <div class="col-md-8">
                <div class="diagnostic-card">
                  <h6><i class="bi bi-hdd"></i> Edge Storage</h6>
                  <div class="diagnostic-item">
                    <span>Edge Storage Size:</span>
                    <span><strong id="diagEdgeStorageSize">-</strong></span>
                  </div>
                  <div class="diagnostic-item">
                    <span>Recording Time:</span>
                    <span><strong id="diagRecTime">15 days</strong></span>
                  </div>
                  <div class="diagnostic-item">
                    <span>Space Used:</span>
                    <span><strong id="diagSpaceUsed">128 GB</strong></span>
                  </div>
                  <div class="diagnostic-item">
                    <span>Retention:</span>
                    <span><strong id="diagRetention">30 days</strong></span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" id="editCameraBtn">
          <i class="bi bi-pencil"></i> Edit Settings
        </button>
      </div>
    </div>
  </div>
</div>

